{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",

        //https://blog.andrewray.me/autocomplete-es-modules-webpack-vscode/
        "baseUrl": ".",
        "paths": {
            "*": [
                "*.js",
                "src/*.js"
            ]
        }
    },
    "include": [
        "src/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}